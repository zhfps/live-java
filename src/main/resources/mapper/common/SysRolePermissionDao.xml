<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.live.zhf.common.dao.SysRolePermissionDao">

    <resultMap type="com.live.zhf.common.entity.SysRolePermission" id="SysRolePermissionMap">
        <result property="roleId" column="roleId" jdbcType="INTEGER"/>
        <result property="permissionId" column="permissionId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRolePermissionMap">
        select
          roleId, permissionId
        from yunxi.sys_role_permission
        where roleId = #{roleid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRolePermissionMap">
        select
          roleId, permissionId
        from yunxi.sys_role_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRolePermissionMap">
        select
          roleId, permissionId
        from yunxi.sys_role_permission
        <where>
            <if test="roleid != null">
                and roleId = #{roleid}
            </if>
            <if test="permissionid != null">
                and permissionId = #{permissionid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleid" useGeneratedKeys="true">
        insert into yunxi.sys_role_permission()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yunxi.sys_role_permission
        <set>
        </set>
        where roleId = #{roleid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yunxi.sys_role_permission where roleId = #{roleid}
    </delete>

</mapper>