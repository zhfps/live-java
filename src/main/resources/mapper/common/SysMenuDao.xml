<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.live.zhf.common.dao.SysMenuDao">

    <resultMap type="com.live.zhf.common.entity.SysMenu" id="SysMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parentId" jdbcType="INTEGER"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="color" column="color" jdbcType="VARCHAR"/>
        <result property="directory" column="directory" jdbcType="VARCHAR"/>
        <result property="permission" column="permission" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysMenuMap">
        select
          id, parentId, path, name, title, icon, color, directory, permission, status, sort
        from yunxi.sys_menu
        where id = #{id}
    </select>
    <!--查询-->
    <select id="queryPage" resultMap="SysMenuMap">
        select
          id, parentId, path, name, title, icon, color, directory, permission, status, sort
        from yunxi.sys_menu
    </select>
    <!--查询-->
    <select id="queryAll" resultMap="SysMenuMap">
        select
          id, parentId, path, name, title, icon, color, directory, permission, status, sort
        from yunxi.sys_menu
        <where>
            <if test="status != null and status != '全部'">
                status = #{status}
            </if>
            <if test="title != null">
                and title like #{title}
            </if>
        </where>
    </select>
    <!--查询-->
    <select id="getSelect" resultMap="SysMenuMap">
        select
          id, parentId, path, name, title, icon, color, directory, permission, status, sort
        from yunxi.sys_menu
        where directory = "目录"
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into yunxi.sys_menu(parentId, path, name, title, icon, color, directory, permission, status, sort)
        values (#{parentId}, #{path}, #{name}, #{title}, #{icon}, #{color}, #{directory}, #{permission}, #{status}, #{sort})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yunxi.sys_menu
        <set>
            <if test="parentId != null">
                parentId = #{parentId},
            </if>
            <if test="path != null and path != ''">
                path = #{path},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="color != null and color != ''">
                color = #{color},
            </if>
             <if test="permission != null and permission != ''">
                 permission = #{permission},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="sort != null and sort != ''">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yunxi.sys_menu where id = #{id}
    </delete>

</mapper>