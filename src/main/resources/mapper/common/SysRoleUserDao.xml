<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.live.zhf.common.dao.SysRoleUserDao">

    <resultMap type="com.live.zhf.common.entity.SysRoleUser" id="SysRoleUserMap">
        <result property="userId" column="userId" jdbcType="INTEGER"/>
        <result property="roleId" column="roleId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleUserMap">
        select
          userId, roleId
        from yunxi.sys_role_user
        where userId = #{userid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleUserMap">
        select
          userId, roleId
        from yunxi.sys_role_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleUserMap">
        select
          userId, roleId
        from yunxi.sys_role_user
        <where>
            <if test="userid != null">
                and userId = #{userId}
            </if>
            <if test="roleid != null">
                and roleId = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into yunxi.sys_role_user()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yunxi.sys_role_user
        <set>
        </set>
        where userId = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yunxi.sys_role_user where userId = #{userId}
    </delete>

</mapper>