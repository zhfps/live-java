<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.live.zhf.common.dao.SysPermissionDao">

    <resultMap type="com.live.zhf.common.entity.SysPermission" id="SysPermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parentId" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="css" column="css" jdbcType="VARCHAR"/>
        <result property="href" column="href" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="OTHER"/>
        <result property="permission" column="permission" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysPermissionMap">
        select
          id, parentId, name, css, href, type, permission, sort
        from yunxi.sys_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysPermissionMap">
        select
          id, parentId, name, css, href, type, permission, sort
        from yunxi.sys_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysPermissionMap">
        select
          id, parentId, name, css, href, type, permission, sort
        from yunxi.sys_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="parentid != null">
                and parentId = #{parentid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="css != null and css != ''">
                and css = #{css}
            </if>
            <if test="href != null and href != ''">
                and href = #{href}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="permission != null and permission != ''">
                and permission = #{permission}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into yunxi.sys_permission(parentId, name, css, href, type, permission, sort)
        values (#{parentid}, #{name}, #{css}, #{href}, #{type}, #{permission}, #{sort})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yunxi.sys_permission
        <set>
            <if test="parentid != null">
                parentId = #{parentid},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="css != null and css != ''">
                css = #{css},
            </if>
            <if test="href != null and href != ''">
                href = #{href},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="permission != null and permission != ''">
                permission = #{permission},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yunxi.sys_permission where id = #{id}
    </delete>

</mapper>